{
  "name": "ts-rust",
  "version": "0.0.1",
  "description": "Monorepo for @ts-rust packages",
  "author": "Nikita Demin",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krawitzzZ/ts-rust.git"
  },
  "scripts": {
    "lint": "pnpm --recursive --parallel --stream lint",
    "lint:fix": "pnpm --recursive --parallel --stream lint:fix",
    "format": "pnpm --recursive --parallel --stream format",
    "format:fix": "pnpm --recursive --parallel --stream format:fix",
    "ci": "pnpm --recursive --parallel --stream ci",
    "test": "pnpm --recursive --parallel --stream test",
    "typecheck": "pnpm --recursive --parallel --stream typecheck",
    "clean": "rm -rf ./dist && pnpm --recursive --parallel --stream clean",
    "clean:deps": "rm -rf ./node_modules && pnpm --recursive --parallel --stream clean:deps",
    "prebuild": "pnpm clean",
    "build": "pnpm --recursive --stream --filter \"@ts-rust/*...\" build"
  },
  "devDependencies": {
    "@changesets/cli": "2.28.1",
    "@rollup/plugin-node-resolve": "16.0.0",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/jest": "29.5.14",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "prettier": "3.5.2",
    "rollup": "4.34.8",
    "ts-jest": "29.2.6",
    "tslib": "2.8.1",
    "typescript": "5.7.3",
    "typescript-eslint": "8.25.0"
  },
  "engines": {
    "node": ">=20",
    "npm": "please-use-pnpm"
  }
}
